<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--<com.example.administrator.xyws_program.view.zidingyiview.Hupdatabloodpressure-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="140dp"-->
        <!--android:layout_marginTop="10dp"-->
        <!--android:id="@+id/hupdatafloodpressure"-->
        <!--/>-->
    <ImageView
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/shangchuan"
        android:id="@+id/hupdatafloodpressure"
        android:layout_centerHorizontal="true"
        />
<TextView
    android:layout_marginTop="10dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="128/80"
    android:textSize="23dp"
    android:layout_below="@id/hupdatafloodpressure"
    android:layout_marginLeft="130dp"
    android:textStyle="bold"
    android:id="@+id/hlatelydata"
    />
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:text="今天"
    android:layout_marginTop="14dp"
    android:layout_below="@id/hupdatafloodpressure"
    android:layout_toRightOf="@id/hlatelydata"
    android:id="@+id/hdatatime"
    />
    <RadioGroup
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/hradiogroup"
        android:layout_below="@id/hlatelydata"
        android:orientation="horizontal"
        android:weightSum="4"
        >
        <RadioButton
            android:checked="true"
            android:padding="5dp"
            android:id="@+id/hday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:textColor="@drawable/main_zhu_text"
            android:text="日"
            android:textSize="20dp"

            />
        <RadioButton
            android:padding="5dp"
            android:id="@+id/hweek"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:textColor="@drawable/main_zhu_text"
            android:text="周"
            android:textSize="20dp"
            />
        <RadioButton

            android:padding="5dp"
            android:id="@+id/hmonth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:textColor="@drawable/main_zhu_text"
            android:text="月"
            android:textSize="20dp"
            />
        <RadioButton

            android:padding="5dp"
            android:id="@+id/hyear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:textColor="@drawable/main_zhu_text"
            android:text="年"
            android:textSize="20dp"
            />
    </RadioGroup>
<android.support.v4.view.ViewPager
    android:layout_width="match_parent"
    android:layout_height="240dp"
    android:layout_below="@id/hradiogroup"
    android:id="@+id/hviewpager"
    >
</android.support.v4.view.ViewPager>
<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@id/hviewpager"
    >
    <TextView
        android:gravity="center"
        android:layout_weight="1"
        android:drawableTop="@drawable/requstionddoctor"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:text="问医生"
        android:textSize="22dp"
        android:layout_gravity="center"
        />
    <TextView
        android:gravity="center"
        android:drawableTop="@drawable/information"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="资讯"
        android:textSize="22dp"
        android:layout_gravity="center"
        />
    <TextView
        android:gravity="center"
        android:drawableTop="@drawable/alarmclock"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="提醒"
        android:textSize="22dp"
        android:layout_gravity="center"
        />
</LinearLayout>
</RelativeLayout>