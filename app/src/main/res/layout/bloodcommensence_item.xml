<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@drawable/hblood_commonsence"
    android:id="@+id/bloodcommensence_item_onclick"
    >
<RelativeLayout
    android:id="@+id/bloodcommensence_item_rln1"
    android:layout_marginTop="7dp"
    android:layout_width="match_parent"
    android:layout_height="51dp">
    <TextView
        android:id="@+id/bloodcommensence_item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_margin="13dp"
        android:text="高压患者的饮食要点是什么？"
        android:textStyle="bold"
        />

</RelativeLayout>
    <RelativeLayout
        android:id="@+id/bloodcommensence_item_rln2"
        android:layout_below="@id/bloodcommensence_item_rln1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/bloodcommensence_item_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
         android:layout_marginLeft="13dp"
            android:text="2017-06-12  15:01"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/bloodcommensence_item_rln3"
        android:layout_below="@id/bloodcommensence_item_rln2"
        android:layout_width="match_parent"

        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/bloodcommensence_item_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_margin="13dp"
            android:text="54156666666666666666666666666666666666666666666666666666666666666666666666666666666666666666"
            android:maxLines="5"
            />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/bloodcommensence_item_rln4"
        android:layout_below="@id/bloodcommensence_item_rln3"
        android:layout_width="match_parent"

        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_margin="13dp"
            android:text="阅读全文"
            android:textColor="@color/possible_result_points"
            />
        <ImageView
            android:layout_margin="13dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_diary_forward"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>
</RelativeLayout>